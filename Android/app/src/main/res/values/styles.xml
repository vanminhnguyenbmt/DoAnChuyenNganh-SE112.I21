<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/bgToolbar</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/bgLogo</item>
        <item name="android:colorPrimary">@color/colorWhite</item>
        <item name="android:textColorSecondary">@color/colorWhite</item>
    </style>

    <style name="menuitemcolor" parent="AppTheme">
        <item name="android:colorPrimary">@color/bgToolbar</item>
        <item name="drawerArrowStyle">@style/changecolordrawertoggle</item>
    </style>
    
    <style name="changecolordrawertoggle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/colorWhite</item>
    </style>

    <style name="AppSearchView" parent="Widget.AppCompat.SearchView" >
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="capfalse" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>

    <declare-styleable name="PasswordEditText">
        <attr name="useStrike" format="boolean" />
        <attr name="useValidate" format="boolean" />
    </declare-styleable>
    
    <style name="DoiMauNgoiSaoRatingBar" parent="AppTheme">
        <item name="android:colorControlNormal">@color/bgLogo</item>
    </style>

    <style name="checkBoxStyle" parent="Base.Theme.AppCompat">
        <item name="colorAccent">@color/bgLogo</item>
        <item name="android:textColorSecondary">@color/colorGray</item>
    </style>
</resources>
